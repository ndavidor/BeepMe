<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView 
        android:id="@+id/qrcode_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/beepmelogo"
        android:scaleType="center"
        android:layout_alignParentBottom="true"/>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"
	    android:gravity="center"
	    android:layout_above="@id/qrcode_iv_logo">
	    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:textSize="16sp"
	        android:textColor="@color/text_queue"
	        android:text="Please scan the following barcode and check your smartphone"
	        android:gravity="center"/>
	    
	    <ImageView 
	        android:id="@+id/qrcode_iv"
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        android:src="@drawable/ic_launcher"
	        android:scaleType="fitCenter"/>
	    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dp"
	        android:textSize="16sp"
	        android:textColor="@color/text_queue"
	        android:text="Or click to print your ticket"
	        android:gravity="center"/>
	    
	    <Button 
	        android:id="@+id/qrcode_bt_print"
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="8dp"
		    android:textSize="16sp"
		    android:text="Print ticket"/>
	
	</LinearLayout>
    
</RelativeLayout>
